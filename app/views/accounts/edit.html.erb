

<% form_tag user_account_path(session[:user_id]), { :method => :put } do -%>
  <p>
  	<label for='old_password'>Old Password</label>
		<br/>
  	<%= password_field_tag 'old_password', @old_password, :size => 60 %>
	</p>
 
  <p>
  	<label for='password'>New Password</label>
		<br/>
  	<%= password_field_tag 'password', {}, :size => 60 %>
		<br/>
  	<span>Between 4 andcharacters</span>
	</p>
 
  <p>
  	<label for='password_confirmation'>Confirm new password</label>
		<br/>
  	<%= password_field_tag 'password_confirmation', {}, :size => 60 %>
	</p>
	
  <%= submit_tag 'Change password' %>
<% end -%>